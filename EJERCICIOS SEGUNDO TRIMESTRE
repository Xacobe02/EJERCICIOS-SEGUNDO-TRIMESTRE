// Crea una lista de números pares del 2 al 20 utilizando un bucle while.
var numerosPares = [];
var i=0;
while(i<=20){
    numerosPares.push(i);
    i=i +2
}
console.log("listas de numeros" + numerosPares);


// Crea una lista de números impares del 1 al 19 utilizando un bucle for.
    
    var numerosImpares = [];
for(var i=1; i<=19; i++){
//alert(i);
numerosImpares.push(i);
i= i+1
}

console.log("listas de numeros"+ numerosImpares)


